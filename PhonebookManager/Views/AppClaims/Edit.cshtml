@model PhonebookManager.Models.AppClaim

@{
    ViewData["Title"] = "Edit claim";
}

<div class="list-container">
    <div>
        <a asp-action="Index"><h5>Back to List</h5></a>
    </div>
    <h1>Edit</h1>

    <h4>AppClaim</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Claim" class="control-label"></label>
                    <input asp-for="Claim" class="form-control" />
                    <span asp-validation-for="Claim" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
