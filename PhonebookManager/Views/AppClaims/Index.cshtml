@model IEnumerable<PhonebookManager.Models.AppClaim>

@{
    ViewData["Title"] = "App Claims";
}

<div class="list-container">
    <a href="AdminPanel"><h5>Back to admin panel</h5></a>

    <p>
        <a asp-action="Create"><h3>Create New</h3></a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Claim)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Claim)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>