<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhonebookManager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toastify.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhonebookManager.styles.css" asp-append-version="true" />

    <script src="~/js/jquery.js"></script>
    <script src="~/js/jqueryUI.js"></script>
    <script src="~/js/notImplemented.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/toastify.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">*@
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>*@

</head>
<body>
    <header>
        <div class="headr">
            <div>
                <a asp-area="" asp-controller="Dashboard" asp-action="Index"> <img src="~/images/logo.png" class="logo" /> </a>
            </div>
            <div>
                <a asp-area="" asp-controller="Dashboard" asp-action="Index" style="text-decoration:none; color:unset"> <h1>Phonebook Manager</h1></a>
            </div>

            <div class="menu">
                <a class="menu-item" asp-area="" asp-controller="Dashboard" asp-action="Index">Line allocation</a>
                <a class="menu-item" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                <div class="dropdown">
                    <button class="btn-dropdown-menu dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Settings
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="Department">Departments</a></li>
                        <li><a class="dropdown-item" href="AppUser">User management</a></li>
                    </ul>
                </div>
                <i class="bi bi-question-circle" role="button" onclick="notImplemented()"></i>
            </div>
        </div>

    </header>
    <div class="body-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footr">
        <p>Hello, @User.Identity?.Name.Substring(User.Identity.Name.IndexOf(@"\") + 1)</p>
        <p>&copy; @DateTime.Now.Year PhoneBook Manager - Designed & Developed by Production Systems</p>
    </div>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>

